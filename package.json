{
  "name": "html-to-image-converter",
  "version": "2.0.0",
  "description": "Converte arquivos HTML para imagens PNG com suporte a assets externos",
  "main": "magic.js",
  "bin": {
    "h2i": "./bin/html-to-image.js"
  },
  "scripts": {
    "start": "node magic.js",
    "dev": "node magic.js --verbose",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "install:deps": "npm install",
    "build": "echo 'No build process needed'",
    "prestart": "node -e \"console.log('🎯 HTML to Image Converter v1.0')\""
  },
  "keywords": [
    "html",
    "image",
    "converter",
    "puppeteer",
    "screenshot",
    "html-to-image",
    "html2image",
    "instagram",
    "powerpoint",
    "template-generator"
  ],
  "author": "HTML to Image Converter Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/html-to-image-converter/html-to-image"
  },
  "bugs": {
    "url": "https://github.com/html-to-image-converter/html-to-image/issues"
  },
  "homepage": "https://github.com/html-to-image-converter/html-to-image#readme",
  "directories": {
    "lib": "lib",
    "test": "tests",
    "doc": "docs",
    "example": "examples"
  },
  "files": [
    "bin/",
    "lib/",
    "config/",
    "docs/",
    "examples/",
    "scripts/",
    "package.json",
    "README.md"
  ],
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "commander": "^14.0.1",
    "dotenv": "^16.4.5",
    "express": "^5.1.0",
    "node-stream-zip": "^1.15.0",
    "puppeteer": "^24.0.0"
  },
  "engines": {
    "node": ">=18.18.0"
  },
  "devDependencies": {
    "jest": "^30.1.3"
  }
}
